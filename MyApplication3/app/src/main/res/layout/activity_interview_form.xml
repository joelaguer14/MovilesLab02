<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InterviewForm"
        android:background="#AFD3DC" android:id="@+id/textLayoutName">
    <TextView
            android:text="Personal Info"
            android:layout_width="219dp"
            android:layout_height="60dp" android:id="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.023"
            android:textStyle="bold"
            android:textSize="32dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:hint="Name" app:layout_constraintVertical_bias="0.201"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:id="@+id/textInputLayout">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="52dp"
                android:id="@+id/nameTxt"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/idTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintVertical_bias="0.319"
            android:hint="Id"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Password"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.416"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="E-mail"
            app:layout_constraintHorizontal_bias="0.508" app:layout_constraintVertical_bias="0.515"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneTxt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.477" app:layout_constraintVertical_bias="0.625"
            android:hint="Phone"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/addressTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.726"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:hint="Address" app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/startDateTxt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.475" app:layout_constraintVertical_bias="0.829"
            android:hint="Start date"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.939"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>